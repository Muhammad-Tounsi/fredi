{% extends 'base.html.twig' %}

{% block body %}
    <h1>Association</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ association.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ association.name }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ association.city }}</td>
            </tr>
            <tr>
                <th>Postalcode</th>
                <td>{{ association.postalCode }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ association.address }}</td>
            </tr>
            <tr>
                <th>Uniqueid</th>
                <td>{{ association.uniqueId }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('association_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('association_edit', { 'id': association.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
