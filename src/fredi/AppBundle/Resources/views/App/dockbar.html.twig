{% block dockbar %}
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        <div class="container">
            <ul class="nav navbar-nav">
                <li><a href="{{ path('fredi_app_homepage') }}">Accueil</a></li>
                {% if is_granted("ROLE_MEMBER") %}
                    <li><a href="{{ path('costline_new', {'associationUniqueId': associationUniqueId}) }}">Enregistrer une note de frais</a></li>
                {% endif %}
                <li><a href="{{ path('costline_index', { 'associationUniqueId': associationUniqueId }) }}">Consulter le bordereau</a></li>
                <li><a href="{{ path('fredi_association_unset') }}">Changer de Bordereau</a></li>
                {% if is_granted("ROLE_TREASURER") %}
                    <li><a href="{{ path('cost_index') }}">Consulter les bordereau</a></li>
                {% endif %}
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="username">{{ app.user.username}}</span></a>
                    <ul class="dropdown-menu">
                        <li><a href="{{ path('fos_user_profile_show') }}"><i class="icon-user"></i>profil</a></li>
                        <li class="divider"></li>
                        <li><a href="{{ path('fos_user_security_logout') }}"><i class="icon-key"></i> logout</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    {% else %}
        <div class="container">
            <ul class="nav navbar-nav">
                <li><a href="{{ path('fredi_app_homepage') }}">Accueil</a></li>
                <li><a href="{{ path('fos_user_security_login') }}">LogIN</a></li>
            </ul>
        </div>
    {% endif %}
{% endblock %}
